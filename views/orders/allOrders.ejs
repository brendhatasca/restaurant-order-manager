<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <script src="/app.js" defer></script> -->
    <link rel="stylesheet" href="/styles/main.css">
    <title>Orders</title>
</head>
<body>

<!-- Back nav -->
  <a class="back-link" href="/dashboard">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M19 12H5M12 5l-7 7 7 7"/>
    </svg>
    Back to dashboard
  </a>

<header class="dashboard-header">
    <div>
      <!-- <div class="eyebrow">Holiday Orders</div> -->
      <h1 class="dashboard-title">
        <%= sheetTitle || "Event" %> <span>Orders</span>
      </h1>
    </div>

    <!-- <a class="btn-new-event" href="/orders//new">
      <span class="plus-icon">+</span> New Order
    </a> -->

    <button id="btn-new-order" class="btn-new-order" data-event="<%= sheetTitle %>">
      <span class="plus-icon">+</span> New Order
    </button>
  </header>

  <div class="orders-grid">
    <% if (!orders || orders.length === 0) { %>
      <div class="empty-state">
        <div class="empty-state-title">No orders yet</div>
        <div class="empty-state-sub">Orders for this holiday will show up here.</div>
      </div>
    <% } else { %>

      <% orders.forEach(order => { %>
        <a class="order-card" href="/orders/<%= sheetTitle %>/<%= order.orderId %>">
          <div class="order-card-band"></div>

          <div class="order-card-body">

            <div class="order-time-row">
              <div class="order-pickup-time">
                <%= formatPickupTime(order.pickupTime) %>
              </div>
              <div class="order-id">
                #<%= order.orderId %>
              </div>
            </div>

            <div class="order-card-title"><%= order.customerName %></div>
            <div class="order-card-details"><%= order.phone %></div>

            <div class="order-card-footer">
              <span class="timestamp-label">CREATED</span>
              <span class="timestamp-value"><%= formatCreatedAt(order.timestamp) %></span>
            </div>

          </div>
        </a>
      <% }) %>

    <% } %>
  </div>

</body>
</html>