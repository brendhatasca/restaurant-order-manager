<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Order #<%= order.orderId %> â€“ <%= order.customerName %></title>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600&family=DM+Mono:wght@400;500&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/orderDetail.css" />
</head>
<body>

  <div class="page-wrapper">

    <!-- Back nav -->
    <a class="back-link" href="/orders/<%= sheetTitle %>">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5M12 5l-7 7 7 7"/>
      </svg>
      Back to orders
    </a>

    <!-- Header -->
    <header class="order-header">
      <div class="header-left">
        <div class="order-id">Order #<%= order.orderId %></div>
        <h1 class="customer-name"><%= order.customerName %></h1>
        <% if (order.timestamp) { %>
          <div class="order-timestamp">Placed <%= order.timestamp %></div>
        <% } %>
      </div>
      <div class="pickup-block">
        <div class="pickup-label">Pick-up</div>
        <div class="pickup-time"><%= formatPickupTime(order.pickupTime) %></div>
      </div>
    </header>

    <!-- Body -->
    <div class="order-body">

      <!-- Contact -->
      <section class="order-section">
        <div class="section-label">Contact</div>
        <div class="detail-row">
          <span class="detail-key">Phone</span>
          <a class="detail-val phone-link" href="tel:<%= order.phone %>"><%= order.phone %></a>
        </div>
      </section>

      <!-- Items -->
      <section class="order-section">
        <div class="section-label">Items</div>

        <% if (order.cookedFood) { %>
          <div class="detail-row">
            <span class="detail-key">Cooked Food</span>
            <span class="detail-val"><%= order.cookedFood %></span>
          </div>
        <% } %>

        <% if (order.rawSeafood) { %>
          <div class="detail-row">
            <span class="detail-key">Raw Seafood</span>
            <span class="detail-val multiline"><%= order.rawSeafood %></span>
          </div>
        <% } %>

        <% if (order.oysters) { %>
          <div class="detail-row">
            <span class="detail-key">Oysters</span>
            <span class="detail-val"><%= order.oysters %></span>
          </div>
        <% } %>

        <% if (order.platters) { %>
          <div class="detail-row">
            <span class="detail-key">Platters</span>
            <span class="detail-val"><%= order.platters %></span>
          </div>
        <% } %>

        <% if (!order.cookedFood && !order.rawSeafood && !order.oysters && !order.platters) { %>
          <div class="empty-items">No items recorded.</div>
        <% } %>
      </section>

      <!-- Notes -->
      <% if (order.notes) { %>
        <section class="order-section">
          <div class="section-label">Notes</div>
          <div class="notes-box"><%= order.notes %></div>
        </section>
      <% } %>

    </div><!-- /.order-body -->
  </div><!-- /.page-wrapper -->

</body>
</html>
